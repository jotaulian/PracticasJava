package es.studium.operaciones2;

import java.util.Scanner;

public class operaciones2 {

	public static void main(String[] args) {
		int num1, num2,suma,resta,producto;
		float cociente;
		Scanner teclado = new Scanner(System.in);
		System.out.println("Dame un número:");
		num1 = teclado.nextInt();
		System.out.println("Dame otro número:");
		num2 = teclado.nextInt();
		System.out.println("La suma de los números es: " + suma(num1,num2));
		System.out.println("La resta de los números es: " + resta(num1,num2));
		System.out.println("El producto de los números es: " + producto(num1,num2));
		if(num2 != 0) {
			System.out.println("El producto de los números es: " + cociente(num1,num2));
		}else {
			System.out.println("No es posible dividir por 0");
		}
		teclado.close();
	}

	public static int suma(int num1, int num2) {
		// TODO Auto-generated method stub
		return num1 + num2;
	}
	public static int resta(int num1, int num2) {
		// TODO Auto-generated method stub
		return num1 - num2;
	}
	public static int producto(int num1, int num2) {
		// TODO Auto-generated method stub
		return num1 * num2;
	}
	public static float cociente(int num1, int num2) {
		// TODO Auto-generated method stub
		return (float)num1 / (float)num2;
	}
}
